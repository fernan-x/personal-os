{
  "name": "@personal-os/root",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run --parallel dev:api dev:web",
    "dev:api": "pnpm --filter @personal-os/api dev",
    "dev:web": "pnpm --filter @personal-os/web dev",
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "pnpm -r lint",
    "db:generate": "pnpm --filter @personal-os/database db:generate",
    "db:migrate": "pnpm --filter @personal-os/database db:migrate",
    "db:push": "pnpm --filter @personal-os/database db:push",
    "db:studio": "pnpm --filter @personal-os/database db:studio",
    "clean": "pnpm -r exec rm -rf dist node_modules .turbo && rm -rf node_modules"
  },
  "devDependencies": {
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "esbuild",
      "prisma"
    ]
  }
}
